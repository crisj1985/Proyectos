package modelo;

import java.sql.*;
import java.util.*;

public class PersonaDao 
{
	
	
	Conexion c = new Conexion();
	PreparedStatement ps;
	ResultSet rs;
	Connection con;
	
	public List<Persona> Listar() 
	{
		
		List <Persona> objPer = new ArrayList<>(); 
		try {
			con=c.conectar();
			ps=con.prepareStatement("select * from personas");
			rs = ps.executeQuery();

			
			while (rs.next())
			{
				Persona p = new Persona();
				p.setId(rs.getInt(1));
				p.setNombre(rs.getString(2));
				p.setApellidos(rs.getString(3));
				objPer.add(p);
				
			}
			
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		return objPer;
	}
	
	public Persona buscarPersonaId (String id)
	{
		Persona objPer = new Persona();
		try 
		{
			con = c.conectar();
			ps = con.prepareStatement("select * from personas where id = " + id);
			rs = ps.executeQuery();
			
			while(rs.next())
			{
				objPer.setId(rs.getInt(1));
				objPer.setNombre(rs.getString(2));
				objPer.setApellidos(rs.getString(3));
				
			}
			
		} catch (Exception e) 
		{
			// TODO: handle exception
		}
		return objPer;
	}
	
	public int agregar (Persona p) 
	{
		int r = 0;
		try {
			
			String nombre = p.getNombre();
			String apellido = p.getApellidos();
			con = c.conectar();
			ps = con.prepareStatement("insert into personas (name,apellidos) values (?,?)");
			ps.setString(1,nombre);
			ps.setString(2,apellido);
			r = ps.executeUpdate();
			
			if(r==1)
				r=1;
			else
				r=0;
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		return r;
	}
	
	public int actualizar (Persona p)
	{
		String sql = "update personas set name = ? , apellidos = ? where id = ?";
		int r = 0;
		try {
			
			Connection con = new Conexion().conectar();
			ps = con.prepareStatement(sql);
			ps.setString(1, p.getNombre());
			ps.setString(2, p.getApellidos());
			ps.setInt(3, p.getId());
			r=ps.executeUpdate();
			
			if(r==1)
				r=1;
			else
				r=0;
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		return r;
	}
	
	public void eliminar (String id)
	{
		try {
			
			String sql = "delete from personas where id =" + id;
			con = c.conectar();
			ps = con.prepareStatement(sql);
			ps.setString(1, id);
			ps.executeUpdate();
			
		} catch (Exception e) {
			// TODO: handle exception
		}
	}

}
